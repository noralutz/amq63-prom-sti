#!/bin/bash
echo "Before running application"

PROMCONF=/tmp/src/prometheus_jmx_exporter_configuration
ARTCONF=/tmp/src/artemis_configuration
ARTEMIS_INSTANCE=/home/jboss/broker
SRCLIB=/tmp/src/lib

if [ -d ${PROMCONF} ]; then
  echo "Copying artemis config files from project..."
  cp -v ${PROMCONF}/promconfig.yml ${ARTEMIS_INSTANCE}/etc/.
fi

if [ -d ${ARTCONF} ]; then
  echo "Copying artemis config files from project..."
  cp -v ${ARTCONF}/artemis ${ARTEMIS_INSTANCE}/bin/.
fi

exec /usr/local/s2i/run
